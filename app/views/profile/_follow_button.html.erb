<div id=<%= dom_id(@user) %>>
    <% if current_user&.followees&.include?(@user) %>
        <%= button_to "Unfollow", profile_unfollow_path(id: @user.id), class: 'btn btn-danger' %>
    <% else %>
        <%= button_to "Follow", profile_follow_path(id: @user.id), class: 'btn btn-primary' %>
    <% end %>
</div>